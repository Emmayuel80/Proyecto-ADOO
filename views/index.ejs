<% include partials/_header %>
  <style type="text/css">
    body {
      font-family: 'Roboto';
      height: 100vh;
    }

    .contenido {
      width: 100%;
      display: flex;
      margin-top: 200px;
      justify-content: center;
    }

    .cont {
      width: 100%;
      height: 300px;
    }

    .nav {
      display: flex;
      width: 100%;
      height: 50px;
      align-items: center;

    }

    .imagen {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;

    }

    .logo {
      width: 100%;
      height: auto;
      max-width: 350px;;
      margin-bottom:20px;
    }

    .buscador {
      width: 100%;
      height: 200px;
    }

    .botones {
      width: 100%;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .icono {
      color: rgb(3, 169, 244);
      font-size: 30px;
      margin: 5px;
    }

    .mdl-button {
      margin: 5px;
      line-height: 15px;
    }

    .buscador {
      background: #fff;
      display: flex;
      border-radius: 8px;
      border: 2px solid #dfe1e5;
      box-shadow: none;
      border-radius: 24px;
      z-index: 3;
      height: 44px;
      margin: 0 auto;
      max-width: 482px;
    }

    .buscador:hover {
      -webkit-box-shadow: 0px 0px 6px 0px rgb(3, 169, 244);
      -moz-box-shadow: 0px 0px 6px 0px rgb(3, 169, 244);
      box-shadow: 0px 0px 6px 0px rgb(3, 169, 244);
    }

    .search {
      width: 100%;
      margin-left: 15px;
      margin-right: 15px;
      border: none;
    }

    .entrada {
      border: none;
      background-color: transparent;
      width: 100%;
      height: 44px;
      font: 18px 'Roboto', arial, sans-serif;
    }

    .entrada:focus {
      outline: none;
    }

    .cliente {
      font-size: 17px;
      letter-spacing: .03em;
    }
    .combo
    {
      width: 150px;
    }
  </style>
</head>

<body>
  <div class="nav">

      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"><i class="icono fas fa-cart-plus"></i>Carrito(#)</button>
      <span class="cliente">Nombre Apellido</span>
      <a href="/login"><button  class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" id="login">Inciar sesión</button></a>
      <a href="/registro"><button href="/registro" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" id="registro">Registrarse</button></a>
      <a><button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" id="logout">Cerrar sesion</button></a>


  </div>
  <div class="contenido">
    <div class="cont">
      <div class="imagen">
          <a href="/"><img class="logo" src="logo350x350.png"></a>
      </div>
      <form action="">
        <div class="buscador">
          <div class="search">
            <input id="busqueda" class="entrada" type="text" autocapitalize="off" spellcheck="false" autocorrect="off">
          </div>
        </div>
        <div class="botones">
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" type="submit">Buscar</button>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label combo" style="margin-left: 10px">
            <select class="mdl-textfield__input combo" id="filtro" name="filtro">
              <option value="Titilo de Libro">Títilo de Libro</option>
              <option value="Autor">Autor</option>
              <option value="Editorial">Editorial</option>
            </select>
            <label class="mdl-textfield__label " for="filtro" style="    font-size: 16px">Buscar por:</label>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>
