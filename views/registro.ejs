        <script>
            var form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                var form = document.querySelector('.needs-validation');
                var ver = document.getElementsByClassName("mdl-textfield");
                var inp = document.getElementsByClassName("mdl-textfield__input");
                var er = 0;
                for (i = 0; i < inp.length; i++) {
                    if (inp[i].value == "") {
                        ver[i].classList.add("is-invalid");
                        er++;
                    }
                }
                if (er > 0) {
                    event.preventDefault();
                    event.stopPropagation();
                } else {
                    alert("Registro Exitoso!");
                }
            })
