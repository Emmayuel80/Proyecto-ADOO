<body>
    <%include partials/_nav2%>
    <table class="mdl-data-table mdl-js-data-table">
        <thead style="background: rgb(3, 169, 244)">
          <tr>
            <th class="mdl-data-table__cell--non-numeric"><h6 class="cat">Titulo</h6></th>
            <th><h6 class="cat">Cantidad</th></h6>
            <th><h6 class="cat">Precio unitario</th></h6>
            <th><h6 class="cat">Total</th></h6>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <form action="/cart/update/" id="act" method="POST">
          <tr>
            <td class="mdl-data-table__cell--non-numeric"><%= data[i].titulo %></td>
            <td>
                <button onclick="restar('<%=data[i].libro%>')" class="mdl-button mdl-js-button mdl-button--fab  mbutton">
                    -
                  </button>

                <div class="mdl-textfield mtf mdl-js-textfield">
                    <input class="mdl-textfield__input mtf" type="text" pattern="-?[0-9]*(\.[0-9]+)?"  id="contador_<%=data[i].libro%>" value="<%= data[i].cantidad %>" min="0" max="1000" name="contador">
                    <span class="mdl-textfield__error">Input is not a number!</span>
                  </div>
                <button onclick="sumar('<%=data[i].libro%>')" class="mdl-button mdl-js-button mdl-button--fab mbutton">
                    <i   class="material-icons">add</i>
                  </button>
              </td>
            <td><%= data[i].preUnit %></td>
            <td><%= data[i].preUnit*data[i].cantidad %></td>
            <td>
                <a href="/cart/delete/<%= data[i].libro %>"><i class="icono far fa-trash-alt"></i></a>
              </td>
          </tr>
          <% } %>
          <% } %>
        </form>
        </tbody>
      </table>

      <table class="mdl-data-table mdl-js-data-table">
          <thead >
            <tr>
              <th style="background: rgb(3, 169, 244)" class="mdl-data-table__cell--non-numeric"><h6 class="cat">Total a pagar</h6></th>
              <th></th>
              <% if (data) {  var fin=0;%>
                <% for(var i = 0; i < data.length; i++) { %>
                  <% fin=fin+(data[i].preUnit*data[i].cantidad)} %>
              <th ><h6 class="cat"><%= fin %></th></h6>

              <% } %>
            </tr>
          </thead>
          <tbody>

          </form>
          </tbody>
        </table>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script>
    function sumar(i) {
      var caja = document.getElementById("contador_"+i);
      var frm = document.getElementById('act');
      var val = parseInt(caja.value, 10);
      caja.value = (val + 1);
      frm.action = '/cart/update/'+caja.value+'/'+i;

    };

    function restar(i) {
      var caja = document.getElementById("contador_"+i);
      var frm = document.getElementById('act');
      var val = parseInt(caja.value, 10);
      if (val <= 1) {
        caja.value = 1;
      }
      else {
        caja.value = (val - 1);
      }
      frm.action = '/cart/update/'+caja.value+'/'+i;

    };






  </script>
</body>

